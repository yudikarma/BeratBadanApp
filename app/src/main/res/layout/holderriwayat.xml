<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/photo_male_2"
            tools:ignore="MissingConstraints,VectorDrawableCompat"

         />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:layout_alignLeft="@+id/hasil"
                   android:layout_alignParentTop="true"
                   android:layout_alignStart="@+id/hasil"
                   android:layout_margin="5dp"
                   android:text="Nama :"
                   tools:ignore="MissingConstraints" />
               <TextView
                   android:id="@+id/nama"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:layout_alignLeft="@+id/hasil"
                   android:layout_alignParentTop="true"
                   android:layout_alignStart="@+id/hasil"
                   android:layout_margin="5dp"
                   android:text="Display Name"
                   tools:ignore="MissingConstraints" />
           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nama"
                    android:layout_alignStart="@+id/nama"
                    android:layout_below="@+id/nama"
                    android:layout_margin="5dp"
                    android:text="TB / BB :"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/bb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nama"
                    android:layout_alignStart="@+id/nama"
                    android:layout_below="@+id/nama"
                    android:layout_margin="5dp"
                    android:text="159 KG  /"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/tb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/nama"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="89dp"
                    android:layout_marginRight="89dp"
                    android:text="170 cm"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>


           <!-- <TextView
                android:id="@+id/bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:text="Nilai BMI"
                tools:ignore="MissingConstraints" />-->
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:text="Nilai BMI :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/BMI"
                    android:layout_margin="5dp"
                    android:text="18047"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="120dp"
                    android:text="Hasil :" />
                <TextView
                    android:id="@+id/hasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="120dp"
                    android:text="Kurus berisi" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
